# Normalisation d'URL
RewriteEngine on

# /index.xxx → /
RewriteCond %{REQUEST_URI}^.*/index.[A-Za-z]+
RewriteRule ^(.*)index.[A-Za-z]+$ /$1 [R=301,L]
# Cache de fichiers
<FilesMatch "\.(css|js|webp|woff)$">
Header set Cache-Control "public, max-age=31536000"
</FilesMatch>

# Authentification de base (nécessite un fichier .htpasswd)
<Files /.htaccess>
AuthName "Please enter your ID and password"
AuthType Basic
AuthUserFile /lapanthere/.htaccess
Require valid-user
</Files>

# Empêcher l'accès au fichier .htaccess
<Files .htaccess>
order allow,deny
deny from all
</Files>

# Empêcher l'accès à la liste des répertoires et à la liste des fichiers
Options All -Indexes

# activer gzip
<IfModule mod_deflate.c>
SetOutputFilter DEFLATE

BrowserMatch ^Mozilla/4\.0[678] no-gzip
BrowserMatch ^Mozilla/4 gzip-only-text/html
BrowserMatch \bMSIE\s(7|8) !no-gzip !gzip-only-text/html

SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png|ico)$ no-gzip dont-vary
AddOutputFilterByType DEFLATE text/plain
AddOutputFilterByType DEFLATE text/html
AddOutputFilterByType DEFLATE text/xml
AddOutputFilterByType DEFLATE text/css
AddOutputFilterByType DEFLATE text/js
AddOutputFilterByType DEFLATE application/xml
AddOutputFilterByType DEFLATE application/xhtml+xml
AddOutputFilterByType DEFLATE application/rss+xml
AddOutputFilterByType DEFLATE application/atom_xml
AddOutputFilterByType DEFLATE application/javascript
AddOutputFilterByType DEFLATE application/x-javascript
AddOutputFilterByType DEFLATE application/x-httpd-php
AddOutputFilterByType DEFLATE application/x-font-ttf
AddOutputFilterByType DEFLATE application/x-font-woff
AddOutputFilterByType DEFLATE application/x-font-opentype
</IfModule>
